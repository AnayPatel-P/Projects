# Environment Configuration for Live Trading
# Copy this file to .env and fill in your actual values

# Alpaca Paper Trading API Keys (Free Account)
# Get your free paper trading account at: https://alpaca.markets/
ALPACA_API_KEY=your_alpaca_paper_api_key_here
ALPACA_SECRET_KEY=your_alpaca_paper_secret_key_here

# Trading Configuration
INITIAL_CAPITAL=100000
MAX_POSITION_SIZE=0.02  # 2% max position size
MAX_DAILY_TRADES=50
TRADING_SYMBOLS=AAPL,MSFT,GOOGL,TSLA,NVDA,SPY,QQQ

# Risk Management
STOP_LOSS_PERCENT=0.05  # 5% stop loss
TAKE_PROFIT_PERCENT=0.10  # 10% take profit
MAX_DRAWDOWN_PERCENT=0.15  # 15% max drawdown before emergency stop

# Notifications (Optional)
DISCORD_WEBHOOK_URL=your_discord_webhook_url_here
SLACK_WEBHOOK_URL=your_slack_webhook_url_here
EMAIL_NOTIFICATIONS=False

# Database (Optional - for storing trading history)
DATABASE_URL=sqlite:///deployment/trading_history.db

# Advanced Settings
USE_MACHINE_LEARNING=True
USE_ENSEMBLE_STRATEGIES=True
SIGNAL_COOLDOWN_SECONDS=300  # 5 minutes between signals
CHECK_INTERVAL_SECONDS=60    # Check every minute